# Environment variables for YOLO automatic retraining system

# MLflow Configuration
MLFLOW_TRACKING_URI=mlruns
MLFLOW_ARTIFACT_ROOT=./artifacts
MLFLOW_DEFAULT_ARTIFACT_ROOT=./artifacts

# Optional: Remote MLflow server
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_TRACKING_USERNAME=your_username
# MLFLOW_TRACKING_PASSWORD=your_password

# Optional: S3 Configuration for MLflow artifacts
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key  
# MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
# AWS_DEFAULT_REGION=us-west-2

# Optional: Azure Storage Configuration
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_STORAGE_ACCESS_KEY=your_access_key

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./airflow/dags
AIRFLOW__CORE__LOGS_FOLDER=./airflow/logs
AIRFLOW__CORE__PLUGINS_FOLDER=./airflow/plugins
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=sqlite:///./airflow/airflow.db
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here

# Email Configuration (for notifications)
AIRFLOW__SMTP__SMTP_HOST=smtp.gmail.com
AIRFLOW__SMTP__SMTP_PORT=587
AIRFLOW__SMTP__SMTP_STARTTLS=True
AIRFLOW__SMTP__SMTP_SSL=False
# AIRFLOW__SMTP__SMTP_USER=your_email@gmail.com
# AIRFLOW__SMTP__SMTP_PASSWORD=your_app_password

# CUDA Configuration (if using GPU)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# System Configuration
PYTHONPATH=./src:$PYTHONPATH
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8

# Logging Configuration
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# Optional: Weights & Biases Configuration
# WANDB_PROJECT=yolo-automatic-retrain
# WANDB_API_KEY=your_wandb_api_key

# Optional: Slack Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Optional: Microsoft Teams Notifications  
# TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url